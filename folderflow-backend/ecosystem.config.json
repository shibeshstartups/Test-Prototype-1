{
  "apps": [
    {
      "name": "folderflow-backend",
      "script": "index.js",
      "instances": "max",
      "exec_mode": "cluster",
      "watch": false,
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 4000
      },
      "max_memory_restart": "1G",
      "error_file": "logs/err.log",
      "out_file": "logs/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "combine_logs": true,
      "merge_logs": true,
      "ignore_watch": ["node_modules", "logs", "temp-uploads"],
      "autorestart": true,
      "exp_backoff_restart_delay": 100
    }
  ]
}
